<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_form_view_ext" model="ir.ui.view">
        <field name="name">res.partner.form.view.ext</field>
        <field name="model">res.partner</field>
	    <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="inwestycje" groups="sales_team.group_sale_manager"/>
                <field name="suma_inwestycji_netto"/>
                <field name="suma_inwestycji_brutto"/>
            </xpath>
        </field>
    </record>
</odoo>
